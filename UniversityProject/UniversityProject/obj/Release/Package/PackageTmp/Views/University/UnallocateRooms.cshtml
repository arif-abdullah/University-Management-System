
@{
    ViewBag.Title = "UnallocateRooms";
}
<style>
    h2 {
        text-align: center;
        color: aqua;
        background: blueviolet;
    }
</style>

<h2>Unallocate Rooms</h2>

<form action="/University/UnallocateRooms" method="post" class="col-md-4 col-md-offset-4">
    @ViewBag.Unassign
    <div>
        <input type="submit" value="Unallocate Rooms" class="btn btn-group-justified btn-block alert btn-warning" id="buttonID" name="buttonID" onclick="Confirm()" />
    </div>
</form>
@section scripts
{
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        function Confirm() {
            var input = $("<input />");
            input.attr("type", "hidden").attr("name", "confirm_value");
            if (confirm("Are you sure to Unallocate All Rooms?")) {
                input.val("Yes");
            } else {
                input.val("No");
            }
            $("form")[0].appendChild(input[0]);
        }
    </script>

}

